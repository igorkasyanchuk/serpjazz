= no_index_me

.text_block
  %h1 Login
  
  - simple_form_for :user_session, @user_session, :url => user_session_path do |f|
    = f.error_messages
    = f.input :email
    = f.input :password
    = f.input :remember_me, :as => :boolean
    .buttons
      = f.submit "Login"
    .clear
  
  %p.links
    = link_to "Forgot password?", new_password_reset_path
    %br
    = link_to 'Sign up', new_user_path